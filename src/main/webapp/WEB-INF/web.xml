<web-app>
    <display-name>Widget Store</display-name>
    <servlet>
        <servlet-name>register-servlet</servlet-name>
        <servlet-class>com.hcl.web.UserController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>register-servlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>com.hcl.web.LoginController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
  
</web-app>